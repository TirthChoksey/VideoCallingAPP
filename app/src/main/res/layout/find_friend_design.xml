<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp">
    
    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_notification"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_image"
            android:layout_marginTop="15dp">
            
        </ImageView>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_notification"
            android:textColor="@color/colorPrimary"
            android:text="User Name"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_below="@id/image_notification"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/request_accept_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_notification"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="79dp"
            android:layout_marginRight="79dp"
            android:padding="5dp"
            android:background="@drawable/buttonstyle"
            android:textColor="@color/White"
            android:textAllCaps="false"
            android:textSize="13dp"
            android:text="Accept Friend Request">

        </Button>

        <Button
            android:id="@+id/request_decline_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_accept_btn"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="79dp"
            android:layout_marginRight="79dp"
            android:padding="5dp"
            android:background="@drawable/buttonstyleblue"
            android:layout_marginBottom="12dp"
            android:textColor="@color/White"
            android:textAllCaps="false"
            android:textSize="13dp"
            android:text="Decline Friend Request">

        </Button>
    </RelativeLayout>

</androidx.cardview.widget.CardView>