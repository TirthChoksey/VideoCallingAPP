<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/intro_description_color"
    tools:context=".SettingsActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/settings_profile_picture"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_profile_picture"
        android:text="Enter a Portrait Photo (Click Above)"
        android:gravity="center_horizontal"
        android:textSize="14.5dp">

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_settings"
        android:layout_below="@id/settings_profile_picture"
        android:drawableLeft="@drawable/edit_profile"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/White"
        android:textColorHint="@color/White"
        android:hint="Enter your Username"
        android:drawableTint="@color/White"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bio_settings"
        android:layout_below="@id/username_settings"
        android:textColor="@color/White"
        android:textColorHint="@color/White"
        android:drawableLeft="@drawable/edit_status"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:hint="Enter your Bio"
        android:drawableTint="@color/White"/>

    <Button
        android:id="@+id/save_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:background="@drawable/buttonstyle"
        android:drawableTint="@color/White"
        android:hint="Save"
        android:textColor="@color/White"
        android:layout_marginLeft="150dp"
        android:textColorHint="@color/White" />

</RelativeLayout>